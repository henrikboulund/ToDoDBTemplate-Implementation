<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="207.0" prefWidth="258.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.gui.HelloController">
   <children>
      <HBox prefHeight="196.0" prefWidth="218.0">
         <children>
            <VBox prefHeight="196.0" prefWidth="182.0">
               <children>
                  <Label text="USERS:">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbbUsers" prefWidth="150.0">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Label text="ACTIONS:">
                     <VBox.margin>
                        <Insets left="5.0" top="45.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#onAddToDo" prefHeight="25.0" prefWidth="123.0" text="Add...">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onChangeName" prefHeight="25.0" prefWidth="114.0" text="Change name...">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onDeleteToDo" prefHeight="25.0" prefWidth="122.0" text="Delete">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox prefHeight="196.0" prefWidth="192.0">
               <children>
                  <Label text="ToDo list:" />
                  <ListView fx:id="lstToDos" prefHeight="196.0" prefWidth="151.0">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </ListView>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
